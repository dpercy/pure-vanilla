name:                pure-vanilla
version:             0.1.0.0
synopsis:            Simple project template from stack
homepage:            https://github.com/dpercy/pure-vanilla
author:              David Pery
maintainer:          davetp425@gmail.com
copyright:           2016 David Percy
category:            Language
build-type:          Simple
cabal-version:       >=1.10

executable pure-vanilla
  hs-source-dirs:      src
  main-is:             VanillaServer.hs
  other-modules:       VanillaCore, VanillaParser
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , containers
                     , mtl
                     , parsec
                     , template-haskell
                     , QuickCheck

test-suite test-pure-vanilla
  hs-source-dirs:      src
  main-is:             Test.hs
  other-modules:       VanillaCore, VanillaParser, VanillaServer
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , containers
                     , mtl
                     , parsec
                     , template-haskell
                     , QuickCheck
